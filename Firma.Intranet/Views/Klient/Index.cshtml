@model IEnumerable<Firma.Data.Models.Klient>

@{
    ViewData["Title"] = "Klienci";
    Layout = "~/Views/Shared/_IntranetTableLayout.cshtml";
}

@section Tabela{
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="margin-right: 5px; text-decoration: none;">
                        <button type="button" class="btn btn-primary">Edytuj</button>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-danger">Usuń</button>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
}