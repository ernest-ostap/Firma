@model IEnumerable<Firma.Data.Models.Wiadomosc>

@{
    ViewData["Title"] = "Wiadomości";
    Layout = "~/Views/Shared/_IntranetTableLayout.cshtml";
}

@section Tabela{
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Temat)
            </th>
            <th style="width: 35%;">
                Treść
            </th>
            <th>
                Data przesłania
            </th>
            <th>
                Czy dotyczy rezerwacji?
            </th>
            <th>
                Email nadawcy
            </th>
            <th>
                Imię i nazwisko nadawcy
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Temat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataWiadomosci)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DotyczyRezerwacji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailNadawcy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImieNazwiskoNadawcy)
            </td>
                <td>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" style="margin-right: 5px; text-decoration: none;">
                            <button type="button" class="btn btn-primary">Edytuj</button>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-danger">Usuń</button>
                        </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
}