@model IEnumerable<Firma.Data.Models.Dostawa>

@{
    ViewData["Title"] = "Dostawy";
    Layout = "~/Views/Shared/_IntranetTableLayout.cshtml";
}

@section Tabela{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Adres)
                </th>
                <th>
                    Sposób dostawy
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sposob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" style="margin-right: 5px; text-decoration: none;">
                            <button type="button" class="btn btn-primary">Edytuj</button>
                        </a> 
                
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-danger" >Usuń</button>
                        </a>
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
