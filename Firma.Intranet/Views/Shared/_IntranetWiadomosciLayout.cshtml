@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row" style="min-height: 85vh;">
        <div class="col-12 col-md-6 border-end pe-3">
            <h4><i class="fas fa-toolbox me-2"></i>Wiadomości o rezerwacjach</h4>
            @RenderSection("WiadomosciRezerwacje", required: false)
        </div>
        <div class="col-12 col-md-6 ps-3">
            <h4><i class="fas fa-comments me-2"></i>Wiadomości ogólne</h4>
            @RenderSection("WiadomosciKontakt", required: false)
        </div>
    </div>
</div>

