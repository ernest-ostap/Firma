@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <h3 class="mb-4"><i class="fas fa-edit me-2"></i>Zarządzanie treścią strony WWW</h3>

    <ul class="nav nav-tabs mb-4" id="contentTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-content" type="button" role="tab">Strona główna</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-content" type="button" role="tab">Kontakt</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="about-tab" data-bs-toggle="tab" data-bs-target="#about-content" type="button" role="tab">Opis firmy</button>
        </li>
    </ul>

    <div class="tab-content" id="contentTabsContent">
        <div class="tab-pane fade show active" id="home-content" role="tabpanel">
            @RenderSection("HomeContent", required: false)
        </div>
        <div class="tab-pane fade" id="contact-content" role="tabpanel">
            @RenderSection("ContactContent", required: false)
        </div>
        <div class="tab-pane fade" id="about-content" role="tabpanel">
            @RenderSection("AboutContent", required: false)
        </div>
    </div>
</div>

