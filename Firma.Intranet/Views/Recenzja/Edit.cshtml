@model Firma.Data.Models.Recenzja

@{
    ViewData["Title"] = "Edycja";
}

<h1>Edycja</h1>

<h4>Recenzja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Ocena" class="control-label"></label>
                <input asp-for="Ocena" class="form-control" />
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Komentarz" class="control-label"></label>
                <input asp-for="Komentarz" class="form-control" />
                <span asp-validation-for="Komentarz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProduktId" class="control-label"></label>
                <select asp-for="ProduktId" class="form-control" asp-items="ViewBag.ProduktId"></select>
                <span asp-validation-for="ProduktId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KlientId" class="control-label"></label>
                <select asp-for="KlientId" class="form-control" asp-items="ViewBag.KlientId"></select>
                <span asp-validation-for="KlientId" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px;">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 5px;">
    <a asp-action="Index">
        <button type="button" class="btn btn-danger">Anuluj</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
