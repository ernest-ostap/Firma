@model IEnumerable<Firma.Data.Models.Produkt>

@{
    ViewData["Title"] = "Produkty";
    Layout = "~/Views/Shared/_IntranetTableLayout.cshtml";
}

@section Tabela{
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategoria)
            </th>
            <th>
                Cena wypożyczenia
            </th>
            <th>
                Zdjęcie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td style="width: 50%;">
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategoria.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CenaWypozyczenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZdjecieUrl)
            </td>
            <td>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="margin-right: 5px; text-decoration: none;">
                        <button type="button" class="btn btn-primary">Edytuj</button>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-danger">Usuń</button>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
}