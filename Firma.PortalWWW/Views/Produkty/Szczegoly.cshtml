@model Firma.Data.Models.Recenzja
@{
    var produkt = ViewBag.Produkt as Firma.Data.Models.Produkt;
    ViewData["Title"] = produkt?.Nazwa ?? "Szczegóły produktu";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@produkt?.ZdjecieUrl" class="img-fluid rounded shadow" alt="@produkt?.Nazwa" />
        </div>
        <div class="col-md-6">
            <h2>@produkt?.Nazwa</h2>
            <h4 class="text-success mb-3">Cena: @produkt?.CenaWypozyczenia zł / tydzień</h4>
            <p>
                <strong>Opis:</strong><br />
                @produkt?.Opis
            </p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-8">
            <h4>Dodaj opinię</h4>

            @if (TempData["Sukces"] != null)
            {
                <div class="alert alert-success">@TempData["Sukces"]</div>
            }

            <form asp-action="Szczegoly" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ProduktId)

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="imie">Imię</label>
                        <input name="imie" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="nazwisko">Nazwisko</label>
                        <input name="nazwisko" class="form-control" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input name="email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Ocena (1-5)</label>
                    @Html.TextBoxFor(m => m.Ocena, new { type = "number", @class = "form-control", min = 1, max = 5, required = "required" })
                </div>

                <div class="mb-3">
                    <label>Komentarz</label>
                    @Html.TextAreaFor(m => m.Komentarz, new { @class = "form-control", rows = 3 })
                </div>

                <button type="submit" class="btn btn-outline-primary">Wyślij opinię</button>
            </form>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h4>Opinie klientów</h4>

            @if (produkt?.Recenzje != null && produkt.Recenzje.Any())
            {
                foreach (var rec in produkt.Recenzje.OrderByDescending(r => r.Id))
                {
                    <div class="border rounded p-3 mb-3">
                        <strong>@rec.Klient?.Imie @rec.Klient?.Nazwisko</strong>
                        <span class="text-muted">– @rec.Ocena/5</span>
                        <p>@rec.Komentarz</p>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Brak recenzji dla tego produktu.</p>
            }
        </div>
    </div>
</div>
