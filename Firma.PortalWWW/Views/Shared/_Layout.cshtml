@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Portal Klienta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            padding-top: 56px;
        }

        footer {
            padding: 20px 0;
            background-color: #f8f9fa;
            bottom: 0;
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Firma</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Strona główna</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Lista", "Produkty")">Produkty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("OpisFirmy", "Home")">O nas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Kontakt", "Home")">Kontakt</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- strona -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- footer -->
    <footer class="footer">
        <div class="container">
            <p class="m-0">© @DateTime.Now.Year Firma – Wypożyczalnia sprzętu</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
